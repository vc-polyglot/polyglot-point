{
  "name": "polyglot-point-railway",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build-client": "cd client && npm install && npm run build",
    "build-server": "esbuild server/index.ts --platform=node --bundle --format=esm --outfile=dist/server.js",
    "build": "npm run build-client && npm run build-server && shx mkdir -p dist/public && shx cp -r client/dist/* dist/public/",
    "start": "node dist/server.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@google-cloud/text-to-speech": "^6.1.0",
    "@neondatabase/serverless": "^0.10.4",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-tooltip": "^1.2.7",
    "drizzle-orm": "^0.44.2",
    "express": "^4.21.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sonner": "^2.0.6",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "esbuild": "^0.25.5",
    "postcss": "^8.4.0",
    "shx": "^0.3.4",
    "vite": "^4.0.0"
  }
}
